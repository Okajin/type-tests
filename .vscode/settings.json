{
  // ⚒️ Mise en page automatique
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.tabSize": 2, // Petites tabulations propres
  "editor.insertSpaces": true,
  "editor.trimAutoWhitespace": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // 📜 Sauvegardes runiques
  "files.trimTrailingWhitespace": true, // Supprime les espaces inutiles
  "files.insertFinalNewline": true, // Ajoute une ligne vide en fin de fichier
  // 🌈 Ambiance visuelle
  "workbench.colorTheme": "Catppuccin Latte", // Ton thème nain préféré
  // 🔎 IntelliSense plus rapide
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  // 🏰 Divers
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false
}
